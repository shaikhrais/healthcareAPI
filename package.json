{
  "name": "healthcare-management-api",
  "version": "1.0.0",
  "description": "HealthCare Management System REST API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "security:audit": "npm audit --audit-level moderate",
    "generate-ssl-cert": "node ssl/generate-cert.js",
    "start:https": "npm run generate-ssl-cert && npm start",
    "docker:build": "docker build -t healthcare-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "migrate": "node src/shared/database/migrate.js",
    "seed": "node src/shared/database/seed.js"
  },
  "keywords": [
    "healthcare",
    "api",
    "rest",
    "express",
    "swagger",
    "medical"
  ],
  "author": "HealthCare Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "firebase-admin": "^13.5.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "nodemailer": "^7.0.9",
    "qrcode": "^1.5.4",
    "rate-limit-mongo": "^2.3.2",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "twilio": "^5.10.3",
    "web-push": "^3.6.7",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.57.0",
    "eslint-config-node": "^4.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.3",
    "nodemon": "^3.0.1",
    "selfsigned": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

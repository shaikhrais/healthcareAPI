# Production Environment Configuration
# HealthCare Management API - Production Deployment

# =================================
# BASIC CONFIGURATION
# =================================
NODE_ENV=production
PORT=3001
APP_NAME=HealthCare Management API

# =================================
# DOMAIN CONFIGURATION
# =================================
# Replace with your actual domain
DOMAIN=api.yourdomain.com
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# =================================
# DATABASE CONFIGURATION
# =================================
# MongoDB Connection
MONGODB_URI=mongodb://admin:${MONGO_ROOT_PASSWORD}@mongodb:27017/healthcare?authSource=admin

# Database Passwords (CHANGE THESE!)
MONGO_ROOT_PASSWORD=your_super_secure_mongodb_password_min_32_chars
MONGO_USER_PASSWORD=your_secure_app_user_password_min_32_chars

# =================================
# REDIS CONFIGURATION
# =================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_super_secure_redis_password_min_32_chars

# =================================
# SECURITY CONFIGURATION
# =================================
# JWT Configuration (CHANGE THESE!)
JWT_SECRET=your_super_secure_jwt_secret_minimum_32_characters_long_for_production_security
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Session Configuration
SESSION_SECRET=your_super_secure_session_secret_minimum_32_characters_long_for_production
SESSION_TIMEOUT=3600000

# Password Security
BCRYPT_ROUNDS=12
PASSWORD_RESET_EXPIRY_MINUTES=30
EMAIL_VERIFICATION_EXPIRY_MINUTES=1440

# Account Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_HOURS=2

# =================================
# RATE LIMITING
# =================================
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_STRICT_ENDPOINTS=100

# =================================
# EMAIL CONFIGURATION
# =================================
# SendGrid Configuration (replace with your keys)
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=HealthCare Management Team

# SMTP Alternative (if not using SendGrid)
# SMTP_HOST=smtp.yourdomain.com
# SMTP_PORT=587
# SMTP_USER=noreply@yourdomain.com
# SMTP_PASS=your_smtp_password
# SMTP_SECURE=true

# =================================
# PAYMENT PROCESSING
# =================================
# Stripe Configuration (replace with your live keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# =================================
# SMS & PHONE VERIFICATION
# =================================
# Twilio Configuration (replace with your credentials)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VERIFY_SERVICE_SID=VAxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =================================
# PUSH NOTIFICATIONS
# =================================
# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Firebase Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
FIREBASE_TOKEN_URI=https://oauth2.googleapis.com/token

# VAPID Keys for Web Push
VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:admin@yourdomain.com

# =================================
# FILE STORAGE
# =================================
# Local Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# AWS S3 Configuration (optional)
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your-s3-bucket-name

# =================================
# MONITORING & LOGGING
# =================================
# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Error Tracking (Sentry)
# SENTRY_DSN=https://your_sentry_dsn_here

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# =================================
# EXTERNAL INTEGRATIONS
# =================================
# Health Integrations
APPLE_HEALTH_ENABLED=true
GOOGLE_FIT_ENABLED=true
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_client_secret

# Insurance Verification APIs
ELIGIBILITY_API_URL=https://api.insurance-provider.com
ELIGIBILITY_API_KEY=your_eligibility_api_key

# =================================
# CORS CONFIGURATION
# =================================
CORS_ORIGIN=https://app.yourdomain.com,https://admin.yourdomain.com
CORS_CREDENTIALS=true

# =================================
# SSL/TLS CONFIGURATION
# =================================
# SSL Configuration (handled by Traefik)
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000

# =================================
# BACKUP CONFIGURATION
# =================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_32_chars_min

# =================================
# FEATURE FLAGS
# =================================
ENABLE_SWAGGER_DOCS=false
ENABLE_DEBUG_MODE=false
ENABLE_METRICS=true
ENABLE_WEBSOCKETS=true
ENABLE_RATE_LIMITING=true
ENABLE_REQUEST_LOGGING=true

# =================================
# TIMEZONE & LOCALIZATION
# =================================
TIMEZONE=America/New_York
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,es,fr

# =================================
# MAINTENANCE MODE
# =================================
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please try again later."

# =================================
# API VERSIONING
# =================================
API_VERSION=v1
API_PREFIX=/api

# =================================
# WEBHOOKS
# =================================
WEBHOOK_TIMEOUT=30000
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY=5000
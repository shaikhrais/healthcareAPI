# Example Environment Variables
# Copy this file to .env and update with your actual values

# Application
NODE_ENV=production
PORT=3001
APP_NAME=HealthCare Management API

# Database
MONGODB_URI=mongodb://localhost:27017/healthcare
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your-secure-mongodb-password

# Security (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-256-bit-secret-key-change-this-in-production
SESSION_SECRET=your-session-secret-key-change-this-in-production
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MINUTES=60
RATE_LIMIT_MAX_REQUESTS=1000

# External Services (REPLACE WITH ACTUAL KEYS)
STRIPE_SECRET_KEY=sk_live_your_actual_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Twilio SMS
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=support@yourdomain.com
SENDGRID_FROM_NAME=HealthCare Team

# Firebase Push Notifications
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"your-project"}

# Web Push
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
VAPID_SUBJECT=mailto:support@yourdomain.com

# Redis Cache
REDIS_PASSWORD=your-redis-password

# Security
PASSWORD_RESET_EXPIRY_MINUTES=60
EMAIL_VERIFICATION_EXPIRY_MINUTES=1440
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_HOURS=2

# File Upload
UPLOAD_PATH=uploads/
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# CORS
CORS_ORIGIN=https://yourdomain.com,https://app.yourdomain.com
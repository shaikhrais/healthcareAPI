{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": [
    "<rootDir>/tests/**/*.test.js",
    "<rootDir>/src/**/*.test.js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/**/*.test.js",
    "!src/shared/database/seeds/**",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 30000,
  "verbose": true
}